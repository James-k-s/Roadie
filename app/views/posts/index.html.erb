<div class="body-container">
<div class="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <% if post.band_id %>
        <%= link_to band_path(post.band.id), class: "path-link" do %>
          <div class="who-post">
            <%= cl_image_tag post.band.photo.key, class: "post-avatar-image object-fit-cover" %>
            <h3><%= post.band.name %></h3>
          </div>
        <% end %>
      <% else %>
        <%= link_to user_path(post.user.id), class: "path-link" do %>
        <div class="who-post">
          <%= cl_image_tag post.user.photo.key, class: "post-avatar-image object-fit-cover" %>
          <h3><%= post.user.first_name %> <%= post.user.last_name %></h3>
        </div>
        <% end %>
      <% end %>
      <%= image_tag "just_started_band.jpg", alt: "post_image", class: "post-image" %>
      <div class="post-text">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
      </div>
      <hr>
      <div class="post-content">
        <p><%= image_tag "heart.png", class: "like-button" %><%= post.likes %></p>
        <p><%= image_tag "comment.png", class: "like-button" %></p>
        <p><%= image_tag "bookmark.png", class: "like-button" %></p>

      </div>
    </div>
  <% end %>
</div>

</div>
