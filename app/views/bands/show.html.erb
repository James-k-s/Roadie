<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center">
    <h2 class="band-name"><%= @band.name %></h2>
    <button class="contact-button"><i class="fa-solid fa-user"></i><p>Contact Band</p></button>
  </div>
  <div class="band-details">
    <div class="band-info">
      <i class="fa-solid fa-music me-2"></i>
      <p><%= @band.genre %></p>
    </div>
    <div class="band-info">
      <i class="fa-solid fa-calendar me-2"></i>
      <p>Formed <%= @band.created_at.to_date.year %></p>
    </div>
    <div class="band-info">
      <i class="fa-solid fa-location-dot me-2"></i>
      <p><%= @band.address %></p>
    </div>
  </div>
  <div class="d-flex justify-content-between">
    <div class="left-side">
      <div class="band-photo">
      </div>
      <div class="band-about">
        <h3>About Us</h3>
        <p><%= @band.bio %></p>
      </div>
      <div class="band-members">
        <h3>Meet the Band</h3>
        <ul class="members-list">
          <li class="band-member">James Kay-Shuttleworth</li>
          <li class="band-member">Admir Kurman</li>
          <li class="band-member">Milo Vingoe</li>
        </ul>
      </div>
    </div>
    <div class="vacancies">
      <h3>Open Positions:</h3>
      <p>Join our musical journey...</p>
      <div class="vacancy">
        <h4>Bass Guitarist</h4>
        <p>We're looking for a dedicated bass player to complete our rhythm section. Must be passionate about indie rock and open to creative collaboration.</p>
        <h5>Requirements:</h5>
        <ul>
          <li>3+ years of experience</li>
          <li>Regularly available</li>
          <li>Comfortable playing live</li>
        </ul>
        <button>Apply</button>
      </div>
    </div>
  </div>
</div>
